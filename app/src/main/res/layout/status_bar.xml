<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notificationbg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#CC196790">


    <TextView
        android:id="@+id/status_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/status_bar_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BODY"
        android:textColor="@color/colorWhite"
        android:textSize="13dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:layout_below="@+id/status_bar_title"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:enabled="true"
        android:layout_toLeftOf="@+id/status_pause"
        android:layout_marginEnd="4dp"/>

    <ImageView
        android:id="@+id/status_pause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_pause_circle_outline_white"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/status_play"
        android:layout_marginEnd="4dp"/>

    <ImageView
        android:id="@+id/status_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_play_circle_outline_white"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/status_bar_collapse"/>

    <ImageView
        android:id="@id/status_bar_collapse"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_close_white"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/status_bar_album_art"
        android:layout_marginEnd="4dp"/>


    <ImageView
        android:id="@+id/status_bar_album_art"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>